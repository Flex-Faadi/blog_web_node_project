<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs')%>

  <body>
    <%- include('./partials/nav.ejs')%>

    <div class="create_blog_content">
      <h2>Create New Blog</h2>
      <form class="bg-dark text-light" action="/blogs" method="post">
        <div class="row mb-3">
          <label for="title" class="col-sm-2 col-form-label">Blog Title:</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" name="title" id="title">
          </div>
        </div>
        <div class="row mb-3">
          <label for="snippet" class="col-sm-2 col-form-label">Blog Snippet:</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" name="snippet" id="snippet">
          </div>
        </div>
        <div class="row mb-3">
          <label for="body" class="col-sm-2 col-form-label">Blog Body:</label>
          <div class="col-sm-10">
            <textarea class="form-control" name="body" id="body" aria-label="With textarea"></textarea>
          </div>
        </div>
        <div class="text-end">
          <button type="submit" class="btn btn-primary my-2">Add</button>
        </div>
      </form>
    </div>

    <%- include('./partials/footer.ejs')%>
  </body>
</html>
